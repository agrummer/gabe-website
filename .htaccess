RewriteEngine on

# redirect (and mask) the staging subdomain to the staging directory
RewriteCond %{HTTP_HOST} staging.gabeacohn.com$ [NC]
RewriteRule !^staging(/|$) /staging%{REQUEST_URI} [L] # redirect if not /staging
RewriteRule ^staging(/|$) - [L] # don't redirect if in /staging

# permanent redirection for old website addresses
RewriteRule ^about/cv.pdf$ /pdf/Cohn_CV.pdf [NC,L,R=permanent]
RewriteRule ^about(/|$) / [NC,L,R=permanent]
RewriteRule ^research/projects/snupi /SNUPI [NC,R=permanent]
RewriteRule ^research/projects/heatWave /#proj_heatwave [NC,NE,R=permanent]
RewriteRule ^research/projects/gasSense /#proj_gassense [NC,NE,R=permanent]
RewriteRule ^research/projects/electionFraud /#proj_electionfraud [NC,NE,R=permanent]
RewriteRule ^research/projects/cadFeeds /#proj_antennacad [NC,NE,R=permanent]
RewriteRule ^research/projects/netlab /#proj_netlab [NC,NE,R=permanent]
RewriteRule ^research/projects/newModeling /#proj_rrsl06 [NC,NE,R=permanent]
RewriteRule ^research/projects/lmaFitting /#proj_rrsl05 [NC,NE,R=permanent]
RewriteRule ^research/pubs /#publications [NC,NE,L,R=permanent]
RewriteRule ^research/media /#press [NC,NE,L,R=permanent]
RewriteRule ^research(/|$) / [NC,L,R=permanent]
RewriteRule ^teaching$ /#teaching [NC,NE,L,R=permanent]
RewriteRule ^teaching/$ /#teaching [NC,NE,L,R=permanent]
RewriteRule ^teaching/index /#teaching [NC,NE,L,R=permanent]

# masked (don't change URL) redirection of specific project names
RewriteRule ^SNUPI$ /#proj_snupi [NC,NE,L,R]
RewriteRule ^Humantenna$ /#proj_humantenna [NC,NE,L,R]
RewriteRule ^StaticEF$ /#proj_sefs [NC,NE,L,R]

# redirect some pages (temporarily) back to sockeye.cs.washington.edu
RewriteRule ^teaching/(.+) http://sockeye.cs.washington.edu%{REQUEST_URI} [NC,L,R=temp]
RewriteRule ^photos http://sockeye.cs.washington.edu%{REQUEST_URI} [NC,L,R=temp]
RewriteRule ^projects http://sockeye.cs.washington.edu%{REQUEST_URI} [NC,L,R=temp]
RewriteRule ^tmp http://sockeye.cs.washington.edu%{REQUEST_URI} [NC,L,R=temp]


# use custom error pages
ErrorDocument 400 /error.html#400
ErrorDocument 401 /error.html#401
ErrorDocument 403 /error.html#403
ErrorDocument 404 /error.html#404
ErrorDocument 405 /error.html#405
ErrorDocument 406 /error.html#406
ErrorDocument 407 /error.html#407
ErrorDocument 408 /error.html#408
ErrorDocument 409 /error.html#409
ErrorDocument 410 /error.html#410
ErrorDocument 411 /error.html#411
ErrorDocument 412 /error.html#412
ErrorDocument 413 /error.html#413
ErrorDocument 414 /error.html#414
ErrorDocument 415 /error.html#415
ErrorDocument 500 /error.html#500
ErrorDocument 501 /error.html#501
ErrorDocument 502 /error.html#502
ErrorDocument 503 /error.html#503
ErrorDocument 504 /error.html#504
